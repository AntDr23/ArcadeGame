import arcade


# Пустое главное окно приложения
SCREEN_WIDTH = 1500
SCREEN_HEIGHT = 1000
SCREEN_TITLE = "Arcade Game"


class Main_Window(arcade.Window):
    def __init__(self, screen_width, screen_height, screen_title):
        super().__init__(screen_width, screen_height, screen_title, resizable=True)
        self.background_color = arcade.color.TEA_GREEN

    def setup(self):
        pass

    def on_draw(self):
        self.clear()

    def on_mouse_press(self, x, y, button, modifiers):
        pass


def setup_game(width=SCREEN_WIDTH, height=SCREEN_HEIGHT, title="Balls"):
    game = Main_Window(width, height, title)
    game.setup()
    return game


def main():
    setup_game(SCREEN_WIDTH, SCREEN_HEIGHT, SCREEN_TITLE)
    arcade.run()


if __name__ == "__main__":
    main()
